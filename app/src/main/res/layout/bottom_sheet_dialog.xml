<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:clickable="true"
        android:background="?android:selectableItemBackground"
        >


        <androidx.cardview.widget.CardView
            android:id="@+id/image_icon_container"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_launcher_background"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name"
            android:layout_toRightOf="@id/image_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Garena AOV"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_toRightOf="@id/image_icon_container"
            android:layout_below="@+id/name"
            android:text="4.4"
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="?android:selectableItemBackground"
        >

        <ImageView
            android:id="@+id/wishlist_icon"
            android:src="@drawable/wishlist_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"/>

        <TextView
            android:id="@+id/add_to_wisht"
            android:layout_toRightOf="@+id/wishlist_icon"
            android:layout_width="match_parent"
            android:text="Add to wishlist"
            android:textSize="12sp"
            android:layout_marginLeft="13dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    
    <Button
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_shape"
        android:text="Install"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:layout_height="40dp"/>

</LinearLayout>