<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="90dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/top_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/left_desc_text"
                android:text="5"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/mid_desc_icon"
                android:layout_marginTop="2.5dp"
                android:src="@drawable/ic_add_black_24dp"
                android:layout_width="20dp"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/right_desc_text"
                android:text="5"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/below_desc"
        android:layout_below="@+id/top_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bot_desc_text"
            android:text="5"
            android:textSize="11sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:id="@+id/line_end"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:layout_width="1dp"
        android:background="@android:color/darker_gray"
        android:layout_height="22dp"/>

</RelativeLayout>